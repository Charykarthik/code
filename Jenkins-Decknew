pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git branch: 'dev', credentialsId: 'Charykarthik', url: 'https://github.com/Charykarthik/code.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(credentials: [''], ignoreMissing: true) {
  
                sh """
                    scp -o  target/*.war myweb.war  root@tomcat karthikchary744/apache-tomcat-9.0.73:/home/root@tomcat karthikchary744/apache-tomcat-9.0.73/webapps/
                    
                    ssh root@tomcat karthikchary744/apache-tomcat-9.0.73 /home/root@tomcat karthikchary744/apache-tomcat-9.0.73/bin/shutdown.sh
                    
                    ssh root@tomcat karthikchary744/apache-tomcat-9.0.73 /home/root@tomcat karthikchary744/apache-tomcat-9.0.73/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
